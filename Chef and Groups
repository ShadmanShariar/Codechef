/* package codechef; // don't place package name! */

import java.util.*;
import java.lang.*;
import java.io.*;
import java.util.*;
/* Name of the class has to be "Main" only if the class is public. */
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner input = new Scanner(System.in);
 	
			
			
			int t = input.nextInt();
			for (int j = 0; j < t; j++) {
				
			
			String s = input.next();
			
			boolean bool = false ;
			
			int c = 0 ;
			
			for (int i = 0; i < s.length(); i++) {
				
				if (s.charAt(i)=='1') {
					
					if (bool==false) {
					c++;
					}
					bool = true;

				}
				else {
					
					bool = false;
					
				}
			
			
			}
		System.out.println(c);
			}
		
		input.close();
		
		System.exit(0);
	}
}
